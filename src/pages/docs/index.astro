---
import Card from '../../components/Card.astro';
import Layout from '../../layouts/Layout.astro';
import { getDocsSections, getSortedDocs } from '../../lib/content';

const docs = await getSortedDocs();
const sections = getDocsSections(docs);
---

<Layout
  title="Team Orchestrator Docs"
  description="Documentation for Team Orchestrator."
  ogType="website"
  twitterCard="summary"
>
  <section class="page-header">
    <div class="container">
      <p class="eyebrow">Documentation</p>
      <h1>Docs and guides</h1>
      <p class="lead">Technical reference and onboarding material for Team Orchestrator.</p>
      <p class="meta">
        Start here:{' '}
        <a
          href="/docs/getting-started/"
          data-analytics-event="docs_navigation_click"
          data-analytics-category="docs"
          data-analytics-label="getting_started"
          data-analytics-location="docs_index_quick_links"
        >
          Getting started
        </a>
        {' · '}
        <a
          href="/docs/platform-overview/"
          data-analytics-event="docs_navigation_click"
          data-analytics-category="docs"
          data-analytics-label="platform_overview"
          data-analytics-location="docs_index_quick_links"
        >
          Platform overview
        </a>
        {' · '}
        <a
          href="/docs/reference/athena-user-quickstart/"
          data-analytics-event="docs_navigation_click"
          data-analytics-category="docs"
          data-analytics-label="athena_user_quickstart"
          data-analytics-location="docs_index_quick_links"
        >
          Athena quickstart
        </a>
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container docs-sections">
      {sections.map((section) => (
        <section>
          <h2>{section.section}</h2>
          <div class="docs-grid">
            {section.docs.map((doc) => (
              <Card>
                <h3>
                  <a
                    href={`/docs/${doc.slug}/`}
                    data-analytics-event="docs_navigation_click"
                    data-analytics-category="docs"
                    data-analytics-label={doc.slug}
                    data-analytics-location="docs_index_section_grid"
                  >
                    {doc.data.title}
                  </a>
                </h3>
                <p>{doc.data.description}</p>
              </Card>
            ))}
          </div>
        </section>
      ))}
    </div>
  </section>
</Layout>
